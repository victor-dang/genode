<config focus="rom">
	<report hover="yes" focus="yes" clicked="yes" keystate="no"/>
	<background color="#131415"/>
	<domain name="pointer"      layer="1" content="client" label="no" origin="pointer" />
	<domain name="leitzentrale" layer="2" content="client" label="no" hover="always" focus="click" />
	<domain name="default"      layer="3" color="#ff0000" hover="always" focus="click" />
	<domain name="decorator"    layer="3" content="client" label="no" hover="always" focus="transient" />
	<domain name="background"   layer="4" content="client" label="no" hover="always" focus="transient" />

	<policy label_prefix="pointer"          domain="pointer"/>
	<policy label_prefix="leitzentrale -> " domain="leitzentrale"/>
	<policy label_prefix="wm -> decorator"  domain="decorator"/>
	<default-policy                         domain="default"/>

	<global-key name="KEY_F11"      label="global_keys_handler -> input" />
	<global-key name="KEY_F12"      label="global_keys_handler -> input" />
	<global-key name="KEY_CAPSLOCK" label="global_keys_handler -> input" />
	<global-key name="KEY_NUMLOCK"  label="global_keys_handler -> input" />
</config>
